{
  "openapi": "3.0.1",
  "info": {
    "description": "Helps to CRUD hero information.",
    "version": "1.0.0",
    "title": "Hero API Docs"
  },
  "servers": [
    {
      "url": "http://localhost/api"
    }
  ],
  "tags": [
    {
      "name": "hero",
      "description": "Hero related APIs"
    }
  ],
  "paths": {
    "/hero/": {
      "get": {
        "tags": [
          "hero"
        ],
        "summary": "List",
        "description": "",
        "parameters": [
          {
            "description": "Hero ID (Example: 621)",
            "name": "heroId",
            "schema": {
              "type": "string"
            },
            "example": "621",
            "in": "query"
          },
          {
            "name": "sort",
            "schema": {
              "type": "string",
              "default": "createdAt",
              "enum": [
                "createdAt",
                "updatedAt",
                "",
                null
              ],
              "nullable": true
            },
            "description": "",
            "in": "query"
          },
          {
            "name": "direction",
            "schema": {
              "type": "string",
              "default": "desc",
              "enum": [
                "desc",
                "asc"
              ]
            },
            "description": "",
            "in": "query"
          },
          {
            "name": "limit",
            "schema": {
              "type": "integer",
              "default": 100,
              "minimum": 1,
              "maximum": 100,
              "multipleOf": 10
            },
            "description": "",
            "in": "query"
          },
          {
            "name": "page",
            "schema": {
              "type": "integer",
              "exclusiveMinimum": true,
              "minimum": 0,
              "exclusiveMaximum": true,
              "maximum": 10
            },
            "description": "",
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "Normal Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "string",
                      "description": "Status Code",
                      "example": "10000000"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "records": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "_id": {
                                "type": "string",
                                "description": "Unique id of hero",
                                "example": "59ba1f3c2e9787247e29da9b"
                              },
                              "updatedAt": {
                                "type": "string",
                                "description": "Data creation time",
                                "example": "2017-09-14T06:18:36.786Z"
                              },
                              "createdAt": {
                                "type": "string",
                                "description": "Data last update time",
                                "example": "2017-09-14T06:18:36.786Z"
                              },
                              "nickName": {
                                "type": "string",
                                "description": "Nick name",
                                "example": "Ken"
                              },
                              "gender": {
                                "type": "string",
                                "description": "Gender",
                                "example": "Male"
                              },
                              "avatar": {
                                "type": "string",
                                "description": "Hero avatar"
                              }
                            },
                            "required": [
                              "_id",
                              "updatedAt",
                              "createdAt",
                              "nickName",
                              "gender"
                            ],
                            "additionalProperties": false
                          }
                        },
                        "totalCount": {
                          "type": "integer",
                          "description": "Total number of records",
                          "example": 2
                        },
                        "page": {
                          "type": "integer",
                          "description": "Page Number",
                          "example": 1
                        }
                      },
                      "required": [
                        "totalCount",
                        "page"
                      ],
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "code"
                  ],
                  "additionalProperties": false
                }
              }
            }
          },
          "500": {
            "description": "When Server takes a nap.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "hero"
        ],
        "summary": "Create",
        "description": "",
        "parameters": [],
        "responses": {
          "500": {
            "description": "When Server takes a nap.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/Hero"
              }
            }
          }
        }
      }
    },
    "/hero/{id}": {
      "post": {
        "tags": [
          "hero"
        ],
        "summary": "Update",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            },
            "in": "path",
            "description": ""
          }
        ],
        "responses": {
          "500": {
            "description": "When Server takes a nap.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/Hero"
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "hero"
        ],
        "summary": "Open",
        "description": "",
        "parameters": [
          {
            "description": "Hero Id (Example: 1)",
            "name": "id",
            "required": true,
            "schema": {
              "type": "number"
            },
            "example": 1,
            "in": "path"
          }
        ],
        "responses": {
          "500": {
            "description": "When Server takes a nap.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/hero/deprecated/{id}": {
      "get": {
        "tags": [
          "hero"
        ],
        "summary": "Deprecated api",
        "description": "",
        "parameters": [
          {
            "description": "Hero Id (Example: 1)",
            "name": "id",
            "required": true,
            "schema": {
              "type": "number"
            },
            "example": 1,
            "in": "path"
          }
        ],
        "responses": {
          "500": {
            "description": "When Server takes a nap.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "deprecated": true
      }
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "required": [
          "code",
          "err"
        ],
        "properties": {
          "code": {
            "type": "string"
          },
          "err": {
            "type": "string"
          }
        }
      },
      "Hero": {
        "type": "object",
        "description": "Hero profile",
        "properties": {
          "nickName": {
            "type": "string",
            "description": "Hero Nickname",
            "example": "鹄思乱想",
            "minLength": 3,
            "maxLength": 20,
            "pattern": "^[a-z]+$"
          },
          "avatar": {
            "type": "string",
            "format": "uri"
          },
          "icon": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "ip": {
            "type": "string",
            "oneOf": [
              {
                "format": "ipv4"
              },
              {
                "format": "ipv6"
              }
            ]
          },
          "hostname": {
            "type": "string",
            "format": "hostname"
          },
          "gender": {
            "type": "string",
            "enum": [
              "Male",
              "Female",
              ""
            ]
          },
          "height": {
            "type": "number"
          },
          "birthday": {
            "type": "string",
            "format": "date-time"
          },
          "birthTime": {
            "type": "integer"
          },
          "skills": {
            "type": "array",
            "description": "Skills",
            "minItems": 1,
            "maxItems": 3,
            "uniqueItems": true,
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Skill Name",
                      "example": "teleport"
                    },
                    "level": {
                      "type": "integer",
                      "description": "Skill Level",
                      "example": 1
                    }
                  },
                  "additionalProperties": false
                }
              ]
            }
          },
          "retired": {
            "type": "boolean"
          },
          "certificate": {
            "type": "string",
            "format": "binary"
          },
          "rewards": {
            "type": "array",
            "items": {
              "type": "string",
              "description": "Rewards",
              "format": "binary"
            }
          }
        },
        "required": [
          "nickName",
          "avatar"
        ],
        "additionalProperties": true
      }
    }
  }
}